{
  "expo": {
    "name": "Kairos",
    "slug": "kairos-app",
    "scheme": "kairos-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/logo.svg",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./public/logo.svg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/logo.svg",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./public/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
} 